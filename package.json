{
    "name": "rock-buddy",
    "version": "1.9.1-beta",
    "description": "Rock Buddy",
    "main": "./src/main.js",
    "scripts": {
        "build": "python pre_build.py && tsc && webpack --mode=development",
        "start": "npm run build && electron .",
        "dev": "npm run build && electron . http://raspberrypi:8080",
        "release": "git clean -dfX && git submodule foreach --recursive git clean -dfX && npm install && npm run build && electron-builder"
    },
    "author": "TNTMusicStudios",
    "license": "MIT",
    "dependencies": {
        "aes-js": "^3.1.2",
        "async-mutex": "^0.4.0",
        "axios": "^1.4.0",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.1.0",
        "glob": "^10.2.6",
        "open-file-explorer": "^1.0.2",
        "semver": "^7.3.8"
    },
    "devDependencies": {
        "electron": "^23.0.0",
        "electron-builder": "^24.0.0",
        "msbuild": "^1.2.0",
        "typescript": "^4.9.5",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1"
    },
    "build": {
        "icon": "images/icon-256x256",
        "target": "nsis",
        "nsis": {
            "oneClick": true,
            "perMachine": false
        },
        "extraFiles": [
            {
                "from": "RockSniffer/RockSniffer/bin/x64/Release/net6.0-windows",
                "to": "Rocksniffer"
            },
            {
                "from": "rock-buddy-addons",
                "to": "addons/rock-buddy"
            },
            {
                "from": "RockSniffer/addons",
                "to": "addons/RockSniffer"
            }
        ],
        "directories": {
            "output": "release"
        }
    }
}
